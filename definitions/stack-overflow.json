{
	"name": "Stack Overflow",
	"globals": {
		"BASE_URL": "stackexchange.com"
	},
	"commands": [
		{
			"name": "Navigate: Sign Up",
			"steps": [
				{
					"type": "NAVIGATE",
					"data": {
						"destination": "http://stackoverflow.com/users/signup"
					}
				}
			]
		},
		{
			"name": "Navigate: Log In",
			"steps": [
				{
					"type": "NAVIGATE",
					"data": {
						"destination": "http://stackoverflow.com/users/login"
					}
				}
			]
		},
		{
			"name": "Navigate: Tour",
			"steps": [
				{
					"type": "NAVIGATE",
					"data": {
						"destination": "https://stackoverflow.com/tour"
					}
				}
			]
		},
		{
			"name": "Navigate: About Us",
			"steps": [
				{
					"type": "SIMULATE_CLICK",
					"data": {
						"selector": ".js-help-button"
					}
				},
				{
					"type": "SIMULATE_CLICK",
					"data": {
						"selector": ".js-help-dialog li:nth-of-type(4) a"
					}
				}
			]
		},
		{
			"name": "Navigate: Other StackExchange Sites",
			"steps": [
				{
					"type": "FREEFORM_INPUT",
					"data": {
						"question": "Which StackExchange site?",
						"id": "subdomain"
					}
				},
				{
					"type": "NAVIGATE",
					"data": {
						"destination": "http://{{subdomain}}.{{BASE_URL}}"
					}
				}
			]
		},
		{
			"name": "Navigate: Edit Profile & Settings",
			"conditions": [
				{
					"type": "ELEMENT_EXISTS",
					"data": {
						"selector": ".profile-me"
					}
				}
			],
			"steps": [
				{
					"type": "SIMULATE_CLICK",
					"data": {
						"selector": ".profile-me"
					}
				},
				{ "type": "WAIT_FOR_REFRESH" },
				{
					"type": "SIMULATE_CLICK",
					"data": {
						"selector": "#tabs > a:nth-child(3)"
					}
				}
			]
		}
	]
}